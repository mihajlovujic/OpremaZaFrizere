                    </rowConstraints>
                     <children>
                        <Label text="Šifra" />
                        <Label text="Naziv" GridPane.columnIndex="1" />
                        <TextField fx:id="dodajSifraP" GridPane.rowIndex="1" />
                        <TextField fx:id="dodajNazivP" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Cijena" />
                        <Label text="PDV" GridPane.columnIndex="1" />
                        <Label text="Rabat" GridPane.columnIndex="2" />
                        <Label text="Stanje u malom magacinu" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="3" />
                        <Label text="Stanje u velikom magacinu" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="4" />
                        <TextField fx:id="dodajCijenaP" GridPane.rowIndex="1" />
                        <TextField fx:id="dodajPDVP" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="dodajRabatP" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="dodajMaliMagacinP" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        <TextField fx:id="dodajVelikiMagacinP" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
                  <HBox alignment="CENTER" VBox.vgrow="NEVER">
                     <children>
                        <Button fx:id="unosP" mnemonicParsing="false" onAction="#dodajProizvodAkcija" text="Dodaj u bazu" />
                     </children>
                  </HBox>
               </children>
            </VBox>
        </content>
      </Tab>
      <Tab closable="false" text="Kupci">
